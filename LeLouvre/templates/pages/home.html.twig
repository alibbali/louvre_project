{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/home.css')}}">
{% endblock stylesheets %}
{% block musee_body %}
    <div class="container-fluid">
        <div class="row row-bienvenue">
            <div class="col-md-7 col-sm-12" id="joconde">
                <div class="row">
                    <div class="col-md-12" id="contenue-bienvenue">
                        <div>
                            <h3>Bienvenue au</h3>
                            <h1>Musée<br>du<br>Louvre</h1>
                            {% for message in app.flashes('notice') %}
                            <div class="flash-notice col-md-12">
                                <p class="btn btn-success">{{ message }}</p>
                            </div>
                            {% endfor %}                
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-5 col-sm-12">
                <div class="row">
                    <div class="col-md-6 col-sm-5 infos-contact">
                        <div class="row">
                            <div class="infos col-md-12 d-flex justify-content-center align-items-center">
                                <a href="{{path('infos')}}">
                                    <div class="d-flex justify-content-center mb-2"><i class="fas fa-lg align-items-center fa-info"></i></div>
                                    <h3>INFOS<br>PRATIQUES</h3>
                                </a>
                            </div>
                            <div class="contact col-md-12 d-flex justify-content-center align-items-center"> 
                                <a href="">
                                    <div class="d-flex justify-content-center mb-2"><i class="fas fa-lg align-items-center fa-file-signature"></i></div>
