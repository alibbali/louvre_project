{% extends "base.html.twig" %}

{% block title %}
    Acheter un billet -  {{ parent() }} 
{% endblock title %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/billeterie.css')}}">
{% endblock stylesheets %}

{% block musee_body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1 class="text-center titre-billeterie">Billeterie</h1>
            </div>
        </div>
 
        <hr>

        {{form_start(form)}}

        <div class="row">
            <div class="col-md-4">
                {{form_row(form.dateVisite)}}
            </div>
            <div class="col-md-4">
                {{form_row(form.type)}}
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-4">
                <h3>Vos billets</h3>
            </div>
            <div class="col-md-12">
                {{form_row(form.billets)}}
                <a href="#" id="add_category" class="btn btn-info">Ajouter un billet</a>
            </div>

            <div class="col-md-12 d-flex justify-content-end">
                {{form_row(form.save)}}
            </div>
            
            {{form_rest(form)}}

            <div class="col-md-12">
                {{form_end(form)}}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 block-center">
                {{ parent() }}
            </div>
        </div>
    </div>
    
    {% endblock musee_body %}
    {% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/billeterie.js') }}"></script>
    <script src="{{ asset('js/datepicker.js') }}"></script>
    {% endblock javascripts %}