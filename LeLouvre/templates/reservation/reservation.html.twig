{% extends "base.html.twig" %}

{% block title %}
    Acheter un billet -  {{ parent() }} 
{% endblock title %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/billeterie.css')}}">
{% endblock stylesheets %}

{% block musee_body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
                <h1 class="text-center titre-billeterie">Billeterie</h1>
            </div>
        </div>
 
        <hr>

        {{form_start(form)}}

        <div class="row">
            <div class="col-md-4 col-sm-12 col-xs-12">
                {{form_row(form.dateVisite)}}
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                {{form_row(form.type)}}
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12 d-flex felx-column justify-content-center align-items-center">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary button-modal" data-toggle="modal" data-target="#exampleModal">
                        Voir les tarifs
                </button>
      
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Les tarifs</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                            <p>Tarif plein : 16 €</p>
                            <p>Tarif réduit : 10 €</p>
                            <p>Tarif enfant (4-12 ans) : 8 €</p>
                            <p>Tarif sénior : 12 €</p>
                            <p>Gratuit pour les moins de 4 ans</p>
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Merci !</button>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <h3 class="text-center">Vos billets</h3>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                {{form_row(form.billets)}}
                <a href="#" id="add_category" class="btn btn-info">Ajouter un billet</a>
            </div>

            <div class="col-md-12 col-sm-12 col-xs-12 d-flex justify-content-end">
                {{form_row(form.save)}}
            </div>
            
            {{form_rest(form)}}

            <div class="col-md-12 col-sm-12 col-xs-12">
                {{form_end(form)}}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 block-center">
                {{ parent() }}
            </div>
        </div>
    </div>
    
    {% endblock musee_body %}
    {% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/billeterie.js') }}"></script>
    <script src="{{ asset('js/datepicker.js') }}"></script>
    {% endblock javascripts %}